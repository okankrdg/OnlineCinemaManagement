@model CinemaManagement.MVC.Models.Show

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Shows", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="form-horizontal col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create Show</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->

            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(x => x.MovieId)
                    @Html.DropDownListFor(x => x.MovieId, null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.HallId)
                    @Html.DropDownListFor(x => x.HallId, null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.StartTime)
                    @Html.TextBoxFor(x => x.StartTime, null, new { @class = "form-control datetimepicker", type = "text", autocomplete = "off"})
                    @Html.ValidationMessageFor(x => x.StartTime)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.EndTime)
                    @Html.TextBoxFor(x => x.EndTime, null, new { @class = "form-control datetimepicker", type = "text", autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.EndTime)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Price)
                    @Html.TextBoxFor(x => x.Price, null, new { @class = "form-control ", type = "number", step = 1, Value = 15 })
                </div>
            </div>
        </div>
        <div class="form-group ml-2">
            <button type="submit" class="btn btn-primary">Add</button>
            <a href="@Url.Action("Index")" class="btn btn-warning">Cancel</a>
        </div>
    </div>

}

